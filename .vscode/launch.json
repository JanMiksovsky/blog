  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "serve",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/@graphorigami/origami/src/cli/cli.js",
      "runtimeArgs": ["--preserve-symlinks"],
      "args": ["@serve @watch src, =@debug(site.ori/public)"]
    }
  ]
}
